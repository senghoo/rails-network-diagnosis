<div class="page-header">
  <h1>Ping</h1>
</div>
<%= form_tag [:ping], method: :post, class: 'form', multipart: true do %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr >
                <td>
                    主机
                </td>
                <td class="setting-value">
                    <div class="form-group">
                        <%= text_field_tag :host, '', :required=>true%>
                        <span class="help-block">
                        </span>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
    <%= submit_tag "提交", class: 'btn btn-primary ' %>
<% end %>

